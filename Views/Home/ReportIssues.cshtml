@model Programming_7312_Part_1.Models.Issue

@{
    ViewData["Title"] = "Report Issues";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Municipal Services</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Link to your external CSS file -->
    <link href="~/css/futuristic-styles.css" rel="stylesheet">
    <style>
        /* Add these styles to make the dropdown scrollable */
        .location-dropdown {
            max-height: 200px;
            overflow-y: auto;
        }

        .location-option:hover {
            background-color: rgba(37, 140, 251, 0.2);
        }
    </style>
</head>
<body>
    <!-- Animated background particles -->
    <div class="particles">
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
    </div>
    <div class="report-container">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <!-- Page Title -->
                    <div class="page-title">
                        <h1 class="glowing-text">Report Issues</h1>
                        <p class="subtitle">Help us improve by reporting problems you encounter</p>
                    </div>
                    <div class="neon-card">
                        <!-- Success Message (show if ViewBag.SuccessMessage exists) -->
                        @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
                        {
                            <div class="neon-alert">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-check-circle me-3" style="font-size: 1.5rem; color: #28a745;"></i>
                                    <div>
                                        <h5 class="mb-1" style="color: #28a745;">Success!</h5>
                                        <p class="mb-0" style="color: #e0e0e0;">@ViewBag.SuccessMessage</p>
                                        @if (!string.IsNullOrEmpty(ViewBag.EngagementMessage))
                                        {
                                            <p class="mb-0" style="color: rgba(255,255,255,0.7); font-size: 0.9rem;">@ViewBag.EngagementMessage</p>
                                        }
                                    </div>
                                </div>
                            </div>
                        }

                        <!-- Progress Section -->
                        <div class="progress-section">
                            <div class="progress-header d-flex justify-content-between">
                                <span class="progress-title">Form Completion</span>
                                <span class="progress-percentage" id="progressText">0%</span>
                            </div>
                            <div class="neon-progress">
                                <div class="neon-progress-bar" id="progressBar" style="width: 0%;"></div>
                            </div>
                        </div>
                        <!-- Milestones Section -->
                        <div class="milestone-section">
                            <h4 class="milestone-title">Progress Milestones</h4>
                            <div class="milestone-grid">
                                <div class="milestone-item" data-milestone="location">
                                    <div class="milestone-icon"><i class="fas fa-map-marker-alt"></i></div>
                                    <div class="milestone-text">Location Added</div>
                                    <div class="milestone-check"><i class="fas fa-check"></i></div>
                                </div>
                                <div class="milestone-item" data-milestone="category">
                                    <div class="milestone-icon"><i class="fas fa-tag"></i></div>
                                    <div class="milestone-text">Category Selected</div>
                                    <div class="milestone-check"><i class="fas fa-check"></i></div>
                                </div>
                                <div class="milestone-item" data-milestone="description">
                                    <div class="milestone-icon"><i class="fas fa-align-left"></i></div>
                                    <div class="milestone-text">Description Provided</div>
                                    <div class="milestone-check"><i class="fas fa-check"></i></div>
                                </div>
                                <div class="milestone-item" data-milestone="attachment">
                                    <div class="milestone-icon"><i class="fas fa-paperclip"></i></div>
                                    <div class="milestone-text">Media Attached</div>
                                    <div class="milestone-check"><i class="fas fa-check"></i></div>
                                </div>
                            </div>
                        </div>
                        <!-- Form Section -->
                        <div class="form-section">
                            <form id="issueForm" asp-action="ReportIssues" method="post" enctype="multipart/form-data">
                                <!-- Location field -->
                                <div class="neon-form-group">
                                    <label asp-for="Location" class="form-label">Location</label>
                                    <div class="location-wrapper">
                                        <input asp-for="Location" type="text" class="neon-input form-control" id="location" placeholder="Type to search or select from Tokai streets..." required autocomplete="off">
                                        <i class="fas fa-chevron-down dropdown-toggle" id="locationToggle"></i>
                                        <div class="location-dropdown d-none" id="locationDropdown">
                                            <div class="location-option">Alphen Drive</div>
                                            <div class="location-option">Bauhinia Street</div>
                                            <div class="location-option">Bergvliet Road</div>
                                            <div class="location-option">Bluegum Street</div>
                                            <div class="location-option">Bokmakierie Road</div>
                                            <div class="location-option">Botha Avenue</div>
                                            <div class="location-option">Bouwer Street</div>
                                            <div class="location-option">Bree Street</div>
                                            <div class="location-option">Camphor Avenue</div>
                                            <div class="location-option">Cedar Road</div>
                                            <div class="location-option">Chapel Street</div>
                                            <div class="location-option">Conifer Close</div>
                                            <div class="location-option">Cypress Avenue</div>
                                            <div class="location-option">De Waal Drive</div>
                                            <div class="location-option">Disa Road</div>
                                            <div class="location-option">Douglas Murray Drive</div>
                                            <div class="location-option">Eagle Road</div>
                                            <div class="location-option">Elm Street</div>
                                            <div class="location-option">Eucalyptus Road</div>
                                            <div class="location-option">Falcon Road</div>
                                            <div class="location-option">Fig Street</div>
                                            <div class="location-option">Forest Road</div>
                                            <div class="location-option">Fynbos Lane</div>
                                            <div class="location-option">Gum Tree Avenue</div>
                                            <div class="location-option">Heather Road</div>
                                            <div class="location-option">Ironwood Street</div>
                                            <div class="location-option">Jacaranda Avenue</div>
                                            <div class="location-option">Kestrel Road</div>
                                            <div class="location-option">Kingfisher Close</div>
                                            <div class="location-option">Larch Lane</div>
                                            <div class="location-option">Laurel Road</div>
                                            <div class="location-option">Lilac Street</div>
                                            <div class="location-option">Linden Avenue</div>
                                            <div class="location-option">Magnolia Road</div>
                                            <div class="location-option">Maple Street</div>
                                            <div class="location-option">Mimosa Road</div>
                                            <div class="location-option">Mountain View Drive</div>
                                            <div class="location-option">Oak Avenue</div>
                                            <div class="location-option">Olive Street</div>
                                            <div class="location-option">Orange Street</div>
                                            <div class="location-option">Orchid Road</div>
                                            <div class="location-option">Palm Avenue</div>
                                            <div class="location-option">Peach Street</div>
                                            <div class="location-option">Pine Road</div>
                                            <div class="location-option">Poplar Avenue</div>
                                            <div class="location-option">Protea Street</div>
                                            <div class="location-option">Redwood Drive</div>
                                            <div class="location-option">Rose Street</div>
