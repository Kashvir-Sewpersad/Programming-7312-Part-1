                                            <div class="location-option">Tulip Street</div>
                                            <div class="location-option">Valley Road</div>
                                            <div class="location-option">Vine Street</div>
                                            <div class="location-option">Violet Road</div>
                                            <div class="location-option">Walnut Street</div>
                                            <div class="location-option">Wattle Road</div>
                                            <div class="location-option">Weaver Road</div>
                                            <div class="location-option">Willow Street</div>
                                            <div class="location-option">Yellowwood Drive</div>
                                        </div>
                                    </div>
                                    <span asp-validation-for="Location" class="text-danger"></span>
                                </div>

                                <!-- Category field -->
                                <div class="neon-form-group">
                                    <label asp-for="Category" class="form-label">Category</label>
                                    <select asp-for="Category" class="neon-select form-control" required>
                                        <option value="" disabled selected>Select a category</option>
                                        @if (ViewBag.Categories != null)
                                        {
                                            @foreach (string category in ViewBag.Categories)
                                            {
                                                <option value="@category">@category</option>
                                            }
                                        }
                                        else
                                        {
                                            <option value="Roads">Roads & Infrastructure</option>
                                            <option value="Water">Water & Sanitation</option>
                                            <option value="Electricity">Electricity</option>
                                            <option value="Waste">Waste Management</option>
                                            <option value="Public Safety">Public Safety</option>
                                            <option value="Parks">Parks & Recreation</option>
                                            <option value="Other">Other</option>
                                        }
                                    </select>
                                    <span asp-validation-for="Category" class="text-danger"></span>
                                </div>

                                <!-- Description field -->
                                <div class="neon-form-group">
                                    <label asp-for="Description" class="form-label">Description</label>
                                    <textarea asp-for="Description" class="neon-textarea form-control" rows="4" placeholder="Describe the issue in detail..." required></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>

                                <!-- File upload field -->
                                <div class="neon-form-group">
                                    <label class="form-label">Attach Media (Optional)</label>
                                    <div class="file-upload-wrapper">
                                        <input type="file" class="file-upload-input" name="attachment" id="attachment" accept="image/*,.pdf,.doc,.docx">
                                        <div class="file-upload-content">
                                            <div class="file-upload-icon">
                                                <i class="fas fa-cloud-upload-alt"></i>
                                            </div>
                                            <p class="mb-1" style="color: #e0e0e0; font-weight: 500;">Click to upload or drag and drop</p>
                                            <p class="mb-0" style="color: rgba(255,255,255,0.6); font-size: 0.85rem;">Images or files to help explain the issue</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="text-center">
                                    <button type="submit" class="neon-button" id="submitBtn">
                                        <span id="submitText">Submit Report</span>
                                        <span id="submitSpinner" class="spinner-border spinner-border-sm ms-2 d-none"></span>
                                    </button>
                                </div>
                            </form>
                        </div>
                        <!-- Footer -->
                        <a href="@Url.Action("Index", "Home")" id="backToMainBtn" class="back-btn">
                            <i class="fas fa-arrow-left"></i> Back to Main Menu
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        const locationInput = document.getElementById('location');
        const locationDropdown = document.getElementById('locationDropdown');
        const locationToggle = document.getElementById('locationToggle');
        const locationOptions = document.querySelectorAll('.location-option');

        if (locationInput && locationDropdown && locationToggle) {
            // Add click functionality to dropdown toggle
            locationToggle.addEventListener('click', function() {
                if (locationDropdown.classList.contains('d-none')) {
                    locationDropdown.classList.remove('d-none');
                    locationToggle.style.transform = 'translateY(-50%) rotate(180deg)';
                } else {
                    locationDropdown.classList.add('d-none');
                    locationToggle.style.transform = 'translateY(-50%) rotate(0deg)';
                }
            });

            // Add click functionality to each location option
            locationOptions.forEach(option => {
                option.addEventListener('click', function() {
                    locationInput.value = this.textContent;
                    locationDropdown.classList.add('d-none');
                    locationToggle.style.transform = 'translateY(-50%) rotate(0deg)';
                    updateProgress();
                });
            });

            // Show dropdown when input is focused
            locationInput.addEventListener('focus', function() {
                locationDropdown.classList.remove('d-none');
                locationToggle.style.transform = 'translateY(-50%) rotate(180deg)';
            });

            // Hide dropdown when clicking outside
            document.addEventListener('click', function(e) {
                if (!e.target.closest('.location-wrapper')) {
                    locationDropdown.classList.add('d-none');
                    locationToggle.style.transform = 'translateY(-50%) rotate(0deg)';
                }
            });

            // Filter options as user types
            locationInput.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase();
                locationOptions.forEach(option => {
                    if (option.textContent.toLowerCase().includes(searchTerm)) {
                        option.style.display = 'block';
                    } else {
                        option.style.display = 'none';
                    }
                });
                if (searchTerm.length > 0) {
                    locationDropdown.classList.remove('d-none');
                    locationToggle.style.transform = 'translateY(-50%) rotate(180deg)';
                }
                updateProgress();
            });
        }

        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('issueForm');
            const inputs = form.querySelectorAll('input:not([type="submit"]), textarea, select');
            const progressBar = document.getElementById('progressBar');
            const progressText = document.getElementById('progressText');
            const milestoneItems = document.querySelectorAll('.milestone-item');
            const submitBtn = document.getElementById('submitBtn');
            const submitText = document.getElementById('submitText');
            const submitSpinner = document.getElementById('submitSpinner');

            const milestoneMap = {
                "Location": "location",
                "Category": "category",
                "Description": "description",
                "attachment": "attachment"
            };

            function updateProgress() {
                let filled = 0;
                const milestones = {};

                inputs.forEach(input => {
                    const isFilled = (input.type === "file" && input.files.length > 0) ||
                                    (input.type !== "file" && input.value.trim() !== "");
                    if (isFilled) {
                        filled++;
                        const fieldName = input.name || input.id;
                        if (milestoneMap[fieldName]) {
                            milestones[milestoneMap[fieldName]] = true;
                        }
                        input.classList.add('is-valid');
                        input.classList.remove('is-invalid');
                    } else {
                        input.classList.remove('is-valid');
                        if (input.hasAttribute('required')) {
                            input.classList.add('is-invalid');
                        }
                    }
                });

                const percent = Math.round((filled / inputs.length) * 100);
                progressBar.style.width = percent + "%";
                progressText.textContent = percent + "%";

                milestoneItems.forEach(item => {
                    const milestone = item.getAttribute("data-milestone");
                    if (milestones[milestone]) {
                        item.classList.add("completed");
                    } else {
                        item.classList.remove("completed");
                    }
                });

                const requiredFields = form.querySelectorAll('[required]');
                let allRequiredFilled = true;
                requiredFields.forEach(field => {
                    if (field.value.trim() === "") allRequiredFilled = false;
                });
                submitBtn.disabled = !allRequiredFilled;
            }

            updateProgress();

            inputs.forEach(input => {
                input.addEventListener("input", updateProgress);
                input.addEventListener("change", updateProgress);
            });

            const fileInput = document.getElementById('attachment');
            const fileWrapper = document.querySelector('.file-upload-wrapper');
            if (fileInput && fileWrapper) {
                fileInput.addEventListener('change', function() {
                    if (this.files.length > 0) {
                        fileWrapper.style.borderColor = '#28a745';
                        fileWrapper.style.background = 'rgba(40, 167, 69, 0.1)';
                    } else {
                        fileWrapper.style.borderColor = 'rgba(37, 140, 251, 0.3)';
                        fileWrapper.style.background = 'rgba(255, 255, 255, 0.02)';
                    }
                });
            }

            form.addEventListener('submit', function(e) {
                submitBtn.disabled = true;
                submitText.textContent = "Submitting...";
                submitSpinner.classList.remove('d-none');
            });
        });
    </script>
</body>
</html>